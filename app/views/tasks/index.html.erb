<% if logged_in? %>
    <h1>タスク一覧</h1>
    <ul>
        <% @tasks.each do |task| %>
            <li><%= link_to task.id, task %> : <%= task.content %> &gt; <%= task.status %></li>
        <% end %>
    </ul>
    <%= link_to '新規タスクの登録', new_task_path %>

<% else %>
    <h1>Welcome to the TaskList</h1>
        <%= link_to 'Login now!', login_url %>
<% end %>